<div class="container p-4 mt-5">
    <h1>LISTA DE ESTADOS DE OS</h1>
    <hr>
    <a href="/admin/status/add"><button class="btn btn-success mt-2">
            <i class="fa fa-pencil"></i> NOVO ESTADO
        </button></a>

    <table class="table table-striped table-responsive mt-2 align-middle">
        <caption>Lista de estado</caption>
        <thead>
            <tr>
                <th scope="col">Nº DE O.S</th>
                <th scope="col">EQUIPAMENTO</th>
                <th class="col-5 text-truncate" scope="col">ESTADO</th>
                <th scope="col">ACÇÕES</th>
            </tr>
        </thead>

        <tbody>
            {{#each status}}
            <tr>
                <th scope="row">{{os._id}}</th>
                <td>{{os.equipament}}</td>
                <td>{{description}}</td>
                <td>
                    <form action="/admin/status/delete" method="POST">
                        <a class="btn btn-sm btn-success" href="/admin/status/update/{{id}}"><i
                                class="fa fa-pencil"></i></a>
                        <input type="hidden" name="id" value="{{_id}}" />
                        <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i></button>
                    </form>
                </td>
            </tr>
            {{else}}
            <h3 class="h4 mt-4"> Nenhum estado cadastrado</h3>
            {{/each}}
        </tbody>
    </table>
</div>
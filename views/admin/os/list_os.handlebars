<div class="container p-4 mt-5">
    <h1>LISTA DE ORDENS DE SERVIÇOS</h1>
    <hr>
    <a href="/admin/os/add"><button class="btn btn-success mt-2">
            <i class="fa fa-pencil"></i> NOVA ORDEM DE SERVIÇO
        </button></a>

    <table class="table table-striped table-responsive mt-2 align-middle ">
        <caption>Lista de Ordens de serviços</caption>
        <thead>
            <tr>
                <th scope="col">CLIENTE</th>
                <th scope="col">EQUIPAMENTO</th>
                <th class="col-6 text-truncate" scope="col">ASSISTÊNCIA</th>
                <th class="col-2 text-truncate" scope="col">ACÇÕES</th>
            </tr>
        </thead>

        <tbody>
            {{#each os}}
            <tr>
                <th scope="row">{{customer.customer_name}}</th>
                <td>{{equipament}}</td>
                <td>{{assistence}}</td>
                <td>
                    <form action="/admin/os/delete" method="POST">
                        <a class="btn btn-sm btn-primary" href="#"><i class="fa fa-eye"></i></a>
                        <a class="btn btn-sm btn-success" href="/admin/os/update/{{id}}"><i
                                class="fa fa-pencil"></i></a>
                        <input type="hidden" name="id" value="{{_id}}" />
                        <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i></button>

                    </form>
                </td>


            </tr>
            {{else}}
            <h3 class="h4 mt-4"> Nenhuma ordem de serviço cadastrada</h3>
            {{/each}}
        </tbody>
    </table>
</div>
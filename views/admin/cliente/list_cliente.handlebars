<div class="container p-4 mt-5">
    <h1>LISTA DE CLIENTES</h1>
    <hr>
    <a href="/admin/cliente/add"><button class="btn btn-success mt-2">
            <i class="fa fa-pencil"></i> NOVO CLIENTE
        </button></a>

    <table class="table table-striped table-responsive mt-2 align-middle">
        <caption>Lista de clientes</caption>
        <thead>
            <tr>
                <th scope="col">CLIENTE</th>
                <th scope="col">EMAIL</th>
                <th scope="col">TELEFONE</th>
                <th scope="col">ENDEREÇO</th>
                <th scope="col">ACÇÕES</th>
            </tr>
        </thead>

        <tbody>
            {{#each customers}}
            <tr>
                <th scope="row">{{customer_name}}</th>
                <td>{{email}}</td>
                <td>{{phone_number}}</td>
                <td>{{information}}</td>
                <td>
                    <form action="/admin/cliente/delete" method="POST">
                        <a class="btn btn-sm btn-success" href="/admin/cliente/update/{{id}}"><i
                                class="fa fa-pencil"></i></a>
                        <input type="hidden" name="id" value="{{_id}}" />
                        <button type="submit" class="btn btn-sm btn-danger"><i class="fa fa-trash-o"></i></button>
                    </form>
                </td>
            </tr>
            {{else}}
            <h3 class="h4 mt-4"> Nenhum cliente cadastrado</h3>
            {{/each}}
        </tbody>
    </table>
</div>